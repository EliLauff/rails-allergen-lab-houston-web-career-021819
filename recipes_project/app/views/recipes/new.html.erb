<h1>New Recipe Page</h1>
<%= form_for Recipe.new do |f| %>
    <%=f.label :name%><br>
    <%=f.text_field :name%><br>

    <p>
    <%=f.label :user%><br>
    <%=f.collection_select :user_id, @users, :id, :name%>
    </p>

    <p>
    <%=f.label :ingredients%><br>
    <%= f.collection_check_boxes :ingredient_ids, @ingredients, :id, :name%><br>
    </p>

    <%=f.submit%>


<% end %>